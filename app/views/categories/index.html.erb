<%= form_for @form do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: 'Category name' %>
  <%= f.submit %>
<% end %>
<table>
  <tr>
    <td>Name</td>
    <td></td>
  </tr>
  <% @categories.order('name asc').each do |c| %>
    <tr class='index-form'>
      <%= form_for c do |f| %>
        <%= f.text_field :id, type: :hidden, value: c.id %>
        <td>
          <div class='row-item'>
            <%= c.name %>
          </div>
          <%= f.text_field :name, placeholder: 'Category name' %>
        </td>
        <td>
          <div class='edit'>&#9998;</div>
          <div class='cancel'>&#9995;</div>
          <div class='update'>&#10003</div>
          <div class='update-btn'><%= f.submit %></div>
          <div class='delete'><%= link_to 'X', {action: :destroy, id: c.id }, method: :delete, data: { confirm: 'Are you sure?'} %></div>
        </td>
        <td>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
