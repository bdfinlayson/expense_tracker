<% if @month.present? %>
  <div class='navigation-arrows'>
    <% if @previous_month > 0 %>
      <div><%= link_to '< ' + @previous_month_name, url_for(params[:controller] + '?month=' + @previous_month.to_s), disabled: true %></div>
    <% else %>
      <div></div>
    <% end %>
    <h1><%= @current_month_name + ' ' + Time.now.year.to_s %></h1>
    <% if @next_month < 13 %>
      <div><%= link_to @next_month_name + ' >', url_for(params[:controller] + '?month=' + @next_month.to_s) %></div>
    <% else %>
      <div></div>
    <% end %>
  </div>
<% end %>
<table class="tables">
  <thead>
    <tr>
      <% columns.each do |c| %>
        <th><%= c.humanize.titleize %></th>
      <% end %>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% collection.each_with_index do |model, i| %>
      <tr>
        <% columns.each do |c| %>
            <td><%= model.send(c) %></td>
        <% end %>
        <td>
          <button>
            <%= render partial: 'modal/show', locals: {
               form: @form_partial,
               modal_trigger: 'Edit',
               modal_title: 'Edit ' + model.model_name.name.titleize,
               modal_id: model.id,
               model: model
               }
             %>
          </button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
